---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
        <p><%= link_to '이전으로', prev_page %></p>
    <% end %>
<% end %>


<% page_articles.each_with_index do |article, i| %>
    <div class="article">
      <h2 class="article-title"><%= article.title %>
        <small><%= article.date.strftime('%b %e') %></small>
      </h2>
      <!-- use article.summary(250) if you have Nokogiri available to show just
           the first 250 characters -->
      <%= article.summary(450) %>

      <% if article.body.length > 450 %>
          <a href="<%= article.url %>">자세히 보기</a>
      <% end %>
    </div>
<% end %>


<% if paginate %>
    <% if next_page %>
        <p><%= link_to '다음으로', next_page %></p>
    <% end %>
<% end %>
